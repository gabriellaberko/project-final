{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "jsx": "react-jsx",     
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],       // Only compile src folder
  "exclude": ["node_modules", "dist"]
}